<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">

<html>
<head>
	<title>
		Test
	</title>
	<style>
		body { background:rgb(215,215,215); }
		.editor { position:relative; width:400px; height:200px; border:1px inset; background:white; margin:10px; padding:5px; }
		#_stixy_bogus_hidden { position:absolute;width:0;height:0;overflow:hidden;}
	</style>
	<script>
		
    function populatePopup(){
      var frame = document.getElementById('frame');
      frame.contentDocument.getElementsByTagName("html").item(0).innerHTML = unescape('<%= URI.escape(render( :partial => "/layouts/decorator_popup")) %>')
      //frame.contentWindow.location.href = 'data:text/html,<%#= URI.escape(render( :partial => "/layouts/decorator_popup")) %>'
          //console.log(frame)
    }
    
    window.onload = populatePopup;
	
	</script>
</head>
<body> 
  <iframe unselectable="on" style="position:absolute;height:300px;width:300px;z-index:1000000;" frameborder="1" allowtransparency="true" id="frame"></iframe>
	<%#= render( :partial => "/layouts/decorator_popup") %>
</body>
</html>