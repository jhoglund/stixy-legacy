<div class="right-column-bg"></div>

<%= error_messages_for 'user' %>

<% form_tag(:action => 'signin') do -%>

<%= render :partial => "public_navigation" %>
<div class="left-column">
	<% if flash[:message].nil? %>
	<h1>Sign In to Stixy</h1>
	<p>
	If you havenâ€™t <%= link_to "signed up", {:controller => "signup"} %> for Stixy already, we recommend that you do so right away. 
	It will only take a few seconds and it's free. <%= link_to "Sign up", {:controller => "signup"} %>.
	</p>
	<% else %>
	<%= flash[:message] %>
	<% end %>
</div>
<div class="right-column">
	<%= render :partial => "signin" %>
