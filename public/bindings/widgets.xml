<?xml version="1.0"?>
<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xbl="http://www.mozilla.org/xbl"
          xmlns:h="http://www.w3.org/1999/xhtml"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	
	<binding id="shadow">
		<content>
			<h:div style="position:absolute;top:0px;right:0px;bottom:0px;left:0px;background:black;opacity:0.3;-moz-border-radius: 3px;"></h:div>
			<h:div style="position:absolute;top:1px;right:1px;bottom:1px;left:1px;background:black;opacity:0.3;-moz-border-radius: 2px;"></h:div>
			<h:div style="position:absolute;top:2px;right:2px;bottom:2px;left:2px;background:black;opacity:0.3;-moz-border-radius: 1px;"></h:div>
			<h:div style="position:absolute;top:3px;right:3px;bottom:3px;left:3px;background:black;opacity:0.3;-moz-border-radius: 0px;"></h:div>
		</content>
  </binding>
    
</bindings>